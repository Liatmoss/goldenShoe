      <a href="#" class="signup-link">Returns information </a>
    </center>

    </article>
  </div>
  <div class="right-half">
    <article>
      <center>
        <h3>
        <% @shoe_info.each do |shoe| %>
          Shoe name: <%= shoe.shoe_name %> <br>
          <br>
          Shoe colour: <%= shoe.shoe_colour %> <br>
          <br>
